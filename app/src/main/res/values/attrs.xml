<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CircleImageView">
        <attr name="civ_border_width" format="dimension"/>
        <attr name="civ_border_color" format="color"/>
        <attr name="civ_border_overlay" format="boolean"/>
        <attr name="civ_fill_color" format="color"/>
    </declare-styleable>


    <declare-styleable name="notButton">
        <attr name="circleBgColor" format="color"/>
        <attr name="textColor" format="color"/>
        <attr name="circleSize" format="dimension"/>
    </declare-styleable>


    <declare-styleable name="MagicProgressBar">
        <attr name="mpb_percent" format="float"/>
        <attr name="mpb_fill_color" format="color"/>
        <attr name="mpb_background_color" format="color"/>
        <attr name="mpb_flat" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="CircularProgressView">
        <attr name="borderWidth" format="dimension" />
        <attr name="colorSequence" format="reference" />
        <attr name="sweepAnimationDurationMillis" format="integer" />
        <attr name="angleAnimationDurationMillis" format="integer" />
        <attr name="minSweepAngle" format="integer" />
    </declare-styleable>

    <array name="circular_default_color_sequence">
        <item>@color/circular_red</item>
        <item>@color/circular_blue</item>
        <item>@color/circular_yellow</item>
        <item>@color/circular_green</item>
    </array>

    <color name="circular_red">#F90101</color>
    <color name="circular_blue">#0266C8</color>
    <color name="circular_yellow">#F2B50F</color>
    <color name="circular_green">#00933B</color>


</resources>
