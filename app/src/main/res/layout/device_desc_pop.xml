<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="#792a6d"
              android:orientation="vertical">

    <TextView
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#00ffd4"
        android:text="设备详情"
        android:textSize="20dp"/>


    <TextView
        android:id="@+id/device_no"
        android:layout_marginTop="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:textColor="#ffffff"
        android:text="设备编号：lzg2015"
        android:textSize="15dp"/>
    <TextView
        android:id="@+id/device_version"
        android:layout_marginTop="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:textColor="#ffffff"
        android:text="当前版本：lzg2015"
        android:textSize="15dp"/>
    <TextView
        android:id="@+id/device_update"
        android:layout_marginTop="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:textColor="#ffffff"
        android:text="更新时间：lzg2015"
        android:textSize="15dp"/>
    <TextView
        android:id="@+id/device_address"
        android:layout_marginTop="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:textColor="#ffffff"
        android:text="设备地址：归属感三翻四复"
        android:textSize="15dp"/>
    <TextView
        android:id="@+id/device_time"
        android:layout_marginTop="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:textColor="#ffffff"
        android:text="设备放置时间：2015-6-8"
        android:textSize="15dp"/>
    <TextView
        android:id="@+id/device_bianhao"
        android:layout_marginTop="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:textColor="#ffffff"
        android:text="终端号：YTJ5800|45456"
        android:textSize="15dp"/>
    <TextView
        android:id="@+id/device_people"
        android:layout_marginTop="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:textColor="#ffffff"
        android:text="设备签约人：王先生"
        android:textSize="15dp"/>
    <TextView
        android:id="@+id/device_phone"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:textColor="#ffffff"
        android:text="联系电话：18771523791"
        android:textSize="15dp"/>

</LinearLayout>