<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="#3400ff59"
              android:gravity="center">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_weight="1"
                android:id="@+id/tv_no"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="设备号:Lz00002"
                android:layout_marginTop="5dp"
                android:textColor="#bb00ff"
                android:textSize="20dp"
                />

            <TextView
                android:layout_weight="1"
                android:id="@+id/tv_orderno"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:text="订单编号：1"
                android:textColor="#bb00ff"
                android:textSize="20dp"
                />

        </LinearLayout>


        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="派单时间：1"
            android:textColor="#bb00ff"
            android:textSize="20dp"
            />


        <TextView
            android:id="@+id/tv_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="故障描述：屏幕坏了啊所发生的给对方过得很好大商股份电饭锅电饭锅的和"
            android:textColor="#ff0000"
            android:textSize="20dp"
            />

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="地址：屏幕坏了啊所发生的给对方过得很好大商股份电饭锅电饭锅的和"
            android:textColor="#bb00ff"
            android:textSize="20dp"
            />

        <TextView
            android:id="@+id/tv_branch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="派单部门：工程部"
            android:textColor="#bb00ff"
            android:textSize="20dp"
            />

        <TextView
            android:id="@+id/tv_paidanren"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="派单人：卫东"
            android:textColor="#ff2f00"
            android:textSize="20dp"
            />
        <TextView
            android:id="@+id/tv_zhuanpairen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="转派人：卫东"
            android:textColor="#ff2f00"
            android:textSize="20dp"
            />

        <TextView
            android:id="@+id/tv_chuliren"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="处理人：林要强"
            android:textColor="#ff2f00"
            android:textSize="20dp"
            />
        <TextView
            android:id="@+id/tv_chulishijian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="处理时间：林要强"
            android:textColor="#ff2f00"
            android:textSize="20dp"
            />
        <TextView
            android:id="@+id/tv_jiedanshijian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="结单时间：林要强"
            android:textColor="#ff2f00"
            android:textSize="20dp"
            />

        <TextView
            android:id="@+id/tv_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="状态：已结单"
            android:textColor="#000dff"
            android:textSize="20sp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:layout_marginRight="10dp"
                android:id="@+id/bt_check"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:background="@drawable/button_selector"
                android:text="处理"
                android:textSize="20sp"
                />

            <Button
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/bt_send"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:background="@drawable/button_selector"
                android:text="派单"
                android:textSize="20sp"
                />

        </LinearLayout>
        <View
            android:layout_marginTop="5dp"
            android:layout_width="fill_parent"
            android:layout_height="0.6dp"
            android:background="#4f4f4f"/>

    </LinearLayout>


</LinearLayout>