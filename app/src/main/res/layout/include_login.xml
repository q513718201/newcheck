<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:orientation="horizontal"
        android:textSize="14sp"
       android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="11dp">

        <RelativeLayout
            android:id="@+id/rl_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:textColor="@color/base_gray">

            <TextView
                android:id="@+id/tv_phonetitle"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingBottom="12dp"
                android:paddingTop="12dp"
                android:text="工号"
                android:textColor="@color/base_gray"
                android:textSize="18sp"/>

            <EditText
                android:id="@+id/et_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tv_phonetitle"
                android:background="@drawable/et_normal"
                android:hint="@string/input_phone"
                android:paddingBottom="12dp"
                android:paddingTop="12dp"
                android:singleLine="true"
                android:textColor="@color/base_gray"
                android:textColorHint="@color/gray"
                android:textSize="14sp"/>
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rl_psw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_phone"

            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_pswtitle"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingBottom="12dp"
                android:paddingTop="12dp"
                android:text="@string/welcom_title_psw"
                android:textColor="@color/base_gray"
                android:textSize="18dp"/>

            <EditText
                android:id="@+id/et_psw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tv_pswtitle"
                android:background="@drawable/et_normal"
                android:hint="@string/welcom_title_psw_hint"
                android:inputType="textPassword"
                android:maxLength="20"
                android:paddingBottom="12dp"
                android:paddingTop="12dp"
                android:textColor="@color/base_gray"
                android:textColorHint="@color/gray"
                android:textSize="14sp"/>


        </RelativeLayout>

        <Button
            android:id="@+id/login_btn"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_psw"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_selector"
            android:layout_alignParentRight="true"
            android:onClick="click"
            android:text="登录"
            android:textColor="#ffffff"
            android:textSize="20sp"/>

    </RelativeLayout>


</RelativeLayout>